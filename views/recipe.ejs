<!DOCTYPE html>
<html>
<head>
  <title><%= recipe.name %></title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1><%= recipe.name %></h1>
    <p><strong>Ingredients:</strong></p>
    <p><%= recipe.ing %></p>

    <p><strong>Instructions:</strong></p>
    <p><%= recipe.instr %></p>

    <a href="/profile" class="btn btn-default">Back to Recipe Board</a>
  </div>

  <h3>Comments</h3>

<ul class="list-group">
  <% if (recipe.comments && recipe.comments.length > 0) { %>
    <% recipe.comments.forEach(function(comment) { %>
      <li class="list-group-item">
        <strong><%= comment.author %>:</strong> <%= comment.text %>
      </li>
    <% }); %>
  <% } else { %>
    <li class="list-group-item">No comments yet.</li>
  <% } %>
</ul>

<form action="/recipes/<%= recipe._id %>/comments" method="POST">
  <div class="form-group">
    <input type="text" name="author" placeholder="Your name" class="form-control" required>
  </div>
  <div class="form-group">
    <textarea name="text" placeholder="Your comment" class="form-control" required></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Post Comment</button>
</form>
</body>
</html>